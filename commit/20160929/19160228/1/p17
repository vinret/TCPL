#include <stdio.h>
int main()
{
    long int c;
    signed long int i;
    short int x;
    unsigned short int z;
    printf("long int size=%d\n",sizeof(c));
    printf("signed long int size=%d\n",sizeof(i));
    printf("short int size=%d\n",sizeof(x));
    printf("unsigned short int size=%d\n",sizeof(z));
    return 0;
}
